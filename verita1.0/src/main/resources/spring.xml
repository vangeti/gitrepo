    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
        destroy-method="close">
        <property name="driverClassName" value="com.mysql.jdbc.Driver" />
        <property name="url" value="jdbc:mysql://localhost:3306/suncoastpoc" />
        <property name="username" value="root" />
        <property name="password" value="" />
        
    </bean>
 
<!-- Hibernate 3 Annotation SessionFactory Bean definition-->
    <bean id="hibernate3AnnotatedSessionFactory"
        class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
        <property name="dataSource" ref="dataSource" />
        <property name="annotatedClasses">
            <list>               
                <value>cgt.dop.model.Client</value>
               <!--  <value>cgt.dop.model.ClientProgram</value>
                <value>cgt.dop.model.Notification</value>                
                <value>cgt.dop.model.CareProgram</value>
                <value>cgt.dop.model.Contacts</value>
                <value>cgt.dop.model.Staff</value>
                <value>cgt.dop.model.Team</value> -->
            </list>
        </property>
        <property name="hibernateProperties">
           <!--  <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</prop>
                <prop key="hibernate.current_session_context_class">thread</prop>
                <prop key="hibernate.show_sql">false</prop>
            </props> -->
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
                <prop key="hibernate.current_session_context_class">thread</prop>
                <prop key="hibernate.show_sql">false</prop>
            </props>
        </property>
    </bean>
    <bean id="clientDAO" class="cgt.dop.dao.impl.ClientDAOImpl">
        <property name="sessionFactory" ref="hibernate3AnnotatedSessionFactory" />
    </bean>
