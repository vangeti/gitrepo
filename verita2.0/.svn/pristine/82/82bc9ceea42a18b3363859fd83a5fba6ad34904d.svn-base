<div ng-controller="securityVulnerabilityController as svc">
	<div class="securityPanel panel">
		<div class="panel-heading do-panel-heading">
			<div class="widgetMenuIncludeDiv"
				ng-include="'views/app/widgets/widgetMenu/widgetSecurityMenu.html'"></div>
			<div class="panel-title">{{svcTitle}}</div>
		</div>
		<div class="svcPanel-body panel-body">
			<div class="row graphWell bTop">
				<div id="securityLoadImg_id" class="loadImage_class">
					<i class="fa fa-spinner fa-spin fa-3x"></i>
				</div>
				<div ng-show="chartFlag">
					<div id="securityChart" class="svc"
						style="width: 600px; height: 300px;"></div>
				</div>

				<div ng-show="tableFlag">
					<div>
						<table class="table table-bordered">
							<thead>
								<tr>
									<th class="centerAlign">Severity</th>
									<th class="centerAlign">Count</th>

								</tr>
							</thead>
							<tbody>
								<tr>
									<td align="center">Critical</td>
									<td align="center">85</td>

								</tr>
								<tr>
									<td align="center">High</td>
									<td align="center">20</td>

								</tr>
								<tr>
									<td align="center">Medium</td>
									<td align="center">312</td>

								</tr>
								<tr>
									<td align="center">Low</td>
									<td align="center">30</td>

								</tr>
							</tbody>
						</table>


					</div>
					<div class="row">
						<h4>
							Click <a data-toggle="modal" data-target="#svAnalysisModel"
								href="#">here </a>for Detailed Report
						</h4>
					</div>
				</div>


			</div>
		</div>

		<div class="modal fade" id="svAnalysisModel" role="dialog" href="#">
			<div class="modal-dialog modal-lg">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal">&times;</button>
						<h4 class="modal-title">Security Vulnerability</h4>
					</div>
					<div class="modal-body" style="min-height: 500px; height: 500px;">
						<div class="row">
							<iframe
								src="http://172.16.3.193:2018/jenkins/job/VCG/VCG_HTML_Report/"
								style="height: 500px; width: 850px;"></iframe>
						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>